<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".magatzemActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp">

    <TextView
        android:text="CODI ARTICLE SELECCIONAT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/edtCodiMagatzem"
        />

        <TextView
            android:id="@+id/estocView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTOC ACTUAL DE L'ARTICLE" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edtEstocMagatzem"
            />
        <TextView
            android:id="@+id/quantitatView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QUANTITAT A AFEGIR: " />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/edtQuantitatMagatzem"
            />
        <TextView
            android:id="@+id/dataView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA" />
        <EditText
            android:id="@+id/edtDataMagatzem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false"
            android:clickable="true"
            android:maxLines="1" />

        <Button
            android:text="ACCEPTAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnAfegirEstoc"
            android:paddingTop="10dp"
            android:layout_marginTop="30dp"/>

        <Button
            android:text="CANCELAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCancelarEstoc" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>